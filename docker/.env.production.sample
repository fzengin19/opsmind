# OpsMind Production Environment Configuration
# Copy this to Coolify environment variables

# ==============================================
# Application
# ==============================================
APP_NAME=OpsMind
APP_ENV=staging  # Development/Staging environment
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=true   # Error reporting açık (geliştirme için)
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=debug  # Detaylı log kaydı

# ==============================================
# Database (PostgreSQL - Coolify Resource)
# ==============================================
DB_CONNECTION=pgsql
DB_HOST=  # Coolify PostgreSQL internal hostname
DB_PORT=5432
DB_DATABASE=opsmind
DB_USERNAME=  # From Coolify resource
DB_PASSWORD=  # From Coolify resource

# ==============================================
# Redis (Coolify Resource)
# ==============================================
REDIS_CLIENT=phpredis
REDIS_HOST=  # Coolify Redis internal hostname
REDIS_PASSWORD=  # From Coolify resource (if set)
REDIS_PORT=6379

# ==============================================
# Cache & Queue
# ==============================================
CACHE_STORE=redis
CACHE_PREFIX=opsmind_cache

QUEUE_CONNECTION=redis

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

BROADCAST_CONNECTION=log

# ==============================================
# File Storage (AWS S3)
# ==============================================
FILESYSTEM_DISK=s3

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=opsmind-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# Mail (SMTP)
# ==============================================
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# Google OAuth (Socialite)
# ==============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# ==============================================
# Docker Specific
# ==============================================
# Auto-run migrations on container start
AUTO_MIGRATE=true

# ==============================================
# Security
# ==============================================
BCRYPT_ROUNDS=12

# ==============================================
# Optional: Future Features
# ==============================================
# REVERB_APP_ID=
# REVERB_APP_KEY=
# REVERB_APP_SECRET=
# REVERB_HOST=
# REVERB_PORT=8080
